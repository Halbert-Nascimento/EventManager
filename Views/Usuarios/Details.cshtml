@model EventManager.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SenhaHash)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SenhaHash)
        </dd>
    </dl>
</div>

<hr />
<hr />

<h3>Convidados</h3>

@if (Model.Eventos?.Any() == true)
{
    <ul>
        @foreach (var evento in Model.Eventos)
        {
            <li>@evento.Titulo (@evento.valorIngresso)</li>
        }
    </ul>
}
else
{
    <p>Sem convidados cadastrados.</p>
}
<div>
    <a asp-controller="Eventos" asp-action="Create" asp-route-usuarioId="@Model.Id" class="btn btn-primary">Adicionar Evento</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

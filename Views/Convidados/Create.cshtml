@model Convidado

@{
    ViewData["Title"] = "Incrição evento";
}

@* <h1>Inscrever no evento - @ViewBag.Evento.Titulo</h1> *@

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemSucesso"]
    </div>
}
@if (TempData["MensagemError"] != null)
{
    <div class="alert alert-success">
        @TempData["MensagemError"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Inscrever no evento</h3>
                    <small class="text-white-50">@ViewBag.Evento.Titulo</small>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label">Nome Completo</label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite seu nome completo" required />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Digite seu email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sex" class="form-label">Sexo</label>
                            <select asp-for="Sex" class="form-select" required>
                                <option value="">Selecione seu sexo</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Feminino">Feminino</option>
                                <option value="Outro">Outro</option>
                            </select>
                            <span asp-validation-for="Sex" class="text-danger"></span>
                        </div>

                        <div class="bg-light p-3 rounded mb-3">
                            <h5>Detalhes do Evento</h5>
                            <p class="mb-1"><strong>Titulo:</strong> @ViewBag.Evento.Titulo</p>
                            <p class="mb-1"><strong>Local:</strong> @ViewBag.Evento.Local</p>
                            <p class="mb-1"><strong>Data:</strong> @ViewBag.Evento.Data</p>
                            <p class="mb-0"><strong>Horário:</strong> @ViewBag.Evento.Hora</p>
                        </div>

                        
                            <input type="hidden" asp-for="EventoId" value="@ViewBag.EventoId" />
                        

                        <div class="d-flex justify-content-between">
                            <a type="button" class="btn btn-outline-secondary" asp-controller="Eventos" asp-action="Details" asp-route-id="@ViewBag.EventoId">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary" >
                                Confirmar Inscrição
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
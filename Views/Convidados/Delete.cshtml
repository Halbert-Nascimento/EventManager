@model EventManager.Models.Convidado

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza de que deseja excluir participante?</h3>
<div>
    <div class="alert alert-danger" role="alert">
        Todos informações do participante serão excluídos permanentemente. Esta ação não pode ser desfeita.
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Evento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Evento.Titulo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-controller="Usuarios" asp-action="Details">Cancelar</a>
    </form>
</div>
